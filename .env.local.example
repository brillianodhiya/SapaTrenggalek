# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Cron Job Security
CRON_SECRET=your_secure_random_string

# NextAuth.js
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Twitter/X API v2 Configuration
# Get these from https://developer.twitter.com/
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Instagram API Configuration
# Get access token from Instagram Basic Display API or Graph API
# https://developers.facebook.com/docs/instagram-basic-display-api/
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_SECRET_KEY=your-instagram-app-secret

# Facebook API Configuration
# Get access token from Facebook Graph API
# https://developers.facebook.com/docs/graph-api/
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Scraping Configuration
# Maximum items to process per cron job run (default: 100, set to 0 for unlimited)
CRON_MAX_ITEMS_PER_RUN=100
# Maximum processing time in seconds before timeout (default: 50)
CRON_MAX_PROCESSING_TIME=50
# Enable intelligent batch processing for large datasets
CRON_ENABLE_BATCH_PROCESSING=true
# Enable resume processing for incomplete batches
CRON_ENABLE_RESUME_PROCESSING=true